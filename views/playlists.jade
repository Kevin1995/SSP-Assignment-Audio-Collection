extends layout

block content
  h1= title
  
   h1 Welcome #{username}
   h3 Your Playlists
   br
   a(href='/logout') Logout
   br
   a(href='/users/createPlaylist?username=#{username}') Create a new Playlists
   br

   for playlist in playlists
    a(href='/users/playlistCreated?id=#{playlist.playlist_id}') #{playlist.playlist_name}
    br